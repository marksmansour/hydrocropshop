{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

{%- if section.settings.image_height == 'adapt' and section.blocks.first.settings.image_desktop != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        {%- if section.blocks.first.settings.image_mobile != blank -%}
          padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image_mobile.aspect_ratio | times: 100 }}%;
        {%- else -%}
          padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image_desktop.aspect_ratio | times: 100 }}%;
        {%- endif -%}
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image_desktop.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

<slideshow-component
  class="slider-mobile-gutter page-width-banner{% if section.settings.show_text_below %} mobile-text-below{% endif %}"
  role="region"
  aria-roledescription="Image carousel"
  aria-label="{{ section.settings.accessibility_info | default: 'Image banner carousel' | escape }}"
>
  {%- if section.blocks.size > 1 -%}
    <div class="slideshow__controls slider-buttons">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="Previous slide"
        aria-controls="Banner-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
        {%- if section.settings.slider_visual == 'counter' -%}
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">of</span>
          <span class="slider-counter--total">{{ section.blocks.size }}</span>
        {%- else -%}
          <div class="slideshow__control-wrapper">
            {%- for block in section.blocks -%}
              <button
                class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                aria-label="Load slide {{ forloop.index }} of {{ forloop.length }}"
                aria-controls="Banner-{{ section.id }}"
              >
                {%- if section.settings.slider_visual == 'numbers' -%}
                  {{ forloop.index -}}
                {%- else -%}
                  <span class="dot"></span>
                {%- endif -%}
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="Next slide"
        aria-controls="Banner-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  {%- endif -%}

  <div
    class="banner banner--{{ section.settings.image_height }} slider slider--everywhere{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
    id="Banner-{{ section.id }}"
    aria-live="polite"
    aria-atomic="true"
    data-autoplay="false"
  >
    {%- for block in section.blocks -%}
      {%- style -%}
        #Slide-{{ section.id }}-{{ forloop.index }} .banner__media::after {
          opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
        }
      {%- endstyle -%}
      <div
        class="banner__slide slider__slide"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        {{ block.shopify_attributes }}
        role="group"
        aria-roledescription="slide"
        aria-label="{{ forloop.index }} of {{ forloop.length }}"
        tabindex="-1"
      >
        <div class="banner__media media{% if block.settings.image_desktop == blank and block.settings.image_mobile == blank %} placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
          {%- liquid
            assign fetch_priority = 'auto'
            if section.index == 1 and forloop.first
              assign fetch_priority = 'high'
            endif

            if section.settings.image_behavior == 'ambient'
              assign sizes = '120vw'
              assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
            else
              assign sizes = '100vw'
              assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            endif
          -%}

          {%- comment -%} Desktop Image {%- endcomment -%}
          {%- if block.settings.image_desktop != blank -%}
            {%- assign height_desktop = block.settings.image_desktop.width | divided_by: block.settings.image_desktop.aspect_ratio | round -%}
            <div class="banner__media-desktop">
              {%- if forloop.first -%}
                {{
                  block.settings.image_desktop
                  | image_url: width: 3840
                  | image_tag: height: height_desktop, sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: 'banner__image'
                }}
              {%- else -%}
                {{
                  block.settings.image_desktop
                  | image_url: width: 3840
                  | image_tag: loading: 'lazy', height: height_desktop, sizes: sizes, widths: widths, class: 'banner__image'
                }}
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- comment -%} Mobile Image {%- endcomment -%}
          {%- if block.settings.image_mobile != blank -%}
            {%- assign height_mobile = block.settings.image_mobile.width | divided_by: block.settings.image_mobile.aspect_ratio | round -%}
            <div class="banner__media-mobile">
              {%- if forloop.first -%}
                {{
                  block.settings.image_mobile
                  | image_url: width: 3840
                  | image_tag: height: height_mobile, sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: 'banner__image'
                }}
              {%- else -%}
                {{
                  block.settings.image_mobile
                  | image_url: width: 3840
                  | image_tag: loading: 'lazy', height: height_mobile, sizes: sizes, widths: widths, class: 'banner__image'
                }}
              {%- endif -%}
            </div>
          {%- elsif block.settings.image_desktop != blank -%}
            {%- comment -%} Fallback to desktop image if no mobile image {%- endcomment -%}
            {%- assign height_desktop = block.settings.image_desktop.width | divided_by: block.settings.image_desktop.aspect_ratio | round -%}
            <div class="banner__media-mobile">
              {%- if forloop.first -%}
                {{
                  block.settings.image_desktop
                  | image_url: width: 3840
                  | image_tag: height: height_desktop, sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: 'banner__image'
                }}
              {%- else -%}
                {{
                  block.settings.image_desktop
                  | image_url: width: 3840
                  | image_tag: loading: 'lazy', height: height_desktop, sizes: sizes, widths: widths, class: 'banner__image'
                }}
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if block.settings.image_desktop == blank and block.settings.image_mobile == blank -%}
            {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="banner__content banner__content--{{ section.settings.desktop_content_position }} page-width{% if settings.animations_reveal_on_scroll and forloop.first %} scroll-trigger animate--slide-in{% endif %}" style="{% if block.settings.hide_content %}display:none;{% endif %}">
          <div class="banner__box content-container content-container--full-width-mobile color-{{ section.settings.color_scheme }} gradient">
            {%- if block.settings.heading != blank -%}
              <h2 class="banner__heading inline-richtext {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
              </h2>
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              <div class="banner__text rte {{ block.settings.text_style }}">
                <p>{{ block.settings.text }}</p>
              </div>
            {%- endif -%}
            {%- if block.settings.button_label_1 != blank or block.settings.button_label_2 != blank -%}
              <div class="banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} banner__buttons--multiple{% endif %}">
                {%- if block.settings.button_label_1 != blank -%}
                  <a
                    {% if block.settings.button_link_1 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_1 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label_1 | escape -}}
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    {% if block.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_2 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</slideshow-component>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

