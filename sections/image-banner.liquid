{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

<slideshow-component
  class="slider-mobile-gutter"
  role="region"
  aria-roledescription="Image carousel"
  aria-label="Image banner carousel"
  style="display: block; padding: 4px 4px 0 4px;"
>
  <div
    class="slideshow banner banner--adapt grid grid--1-col slider slider--everywhere"
    id="Slider-{{ section.id }}"
    aria-live="polite"
    aria-atomic="true"
    data-autoplay="false"
  >
    {%- for block in section.blocks -%}
      {%- liquid
        assign has_desktop = false
        assign has_mobile = false
        if block.settings.image_desktop != blank
          assign has_desktop = true
        endif
        if block.settings.image_mobile != blank
          assign has_mobile = true
        endif
        
        assign render_slide = false
        if has_desktop or has_mobile
          assign render_slide = true
        endif
      -%}

      {%- if render_slide -%}
        <div
          class="slideshow__slide grid__item grid--1-col slider__slide"
          id="Slide-{{ section.id }}-{{ forloop.index }}"
          {{ block.shopify_attributes }}
          role="group"
          aria-roledescription="slide"
          aria-label="{{ forloop.index }} of {{ forloop.length }}"
          tabindex="-1"
        >
          {%- liquid
            assign fetch_priority = 'auto'
            if section.index == 1 and forloop.first
              assign fetch_priority = 'high'
            endif
          -%}

          {%- comment -%} Desktop Image {%- endcomment -%}
          {%- if has_desktop -%}
            <div class="banner__media-desktop">
              {%- if block.settings.link_desktop != blank -%}
                <a href="{{ block.settings.link_desktop }}" class="banner__link">
              {%- endif -%}
              {%- if forloop.first -%}
                {{ block.settings.image_desktop | image_url: width: 3840 | image_tag: fetchpriority: fetch_priority }}
              {%- else -%}
                {{ block.settings.image_desktop | image_url: width: 3840 | image_tag: loading: 'lazy' }}
              {%- endif -%}
              {%- if block.settings.link_desktop != blank -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- comment -%} Mobile Image {%- endcomment -%}
          {%- if has_mobile -%}
            {%- liquid
              assign mobile_link = block.settings.link_mobile
              if mobile_link == blank and block.settings.link_desktop != blank
                assign mobile_link = block.settings.link_desktop
              endif
            -%}
            <div class="banner__media-mobile">
              {%- if mobile_link != blank -%}
                <a href="{{ mobile_link }}" class="banner__link">
              {%- endif -%}
              {%- if forloop.first -%}
                {{ block.settings.image_mobile | image_url: width: 3840 | image_tag: fetchpriority: fetch_priority }}
              {%- else -%}
                {{ block.settings.image_mobile | image_url: width: 3840 | image_tag: loading: 'lazy' }}
              {%- endif -%}
              {%- if mobile_link != blank -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- comment -%} Fallback: If only one image exists, show it on both {%- endcomment -%}
          {%- if has_desktop and has_mobile == false -%}
            {%- liquid
              assign mobile_link = block.settings.link_mobile
              if mobile_link == blank and block.settings.link_desktop != blank
                assign mobile_link = block.settings.link_desktop
              endif
            -%}
            <div class="banner__media-mobile">
              {%- if mobile_link != blank -%}
                <a href="{{ mobile_link }}" class="banner__link">
              {%- endif -%}
              {%- if forloop.first -%}
                {{ block.settings.image_desktop | image_url: width: 3840 | image_tag: fetchpriority: fetch_priority }}
              {%- else -%}
                {{ block.settings.image_desktop | image_url: width: 3840 | image_tag: loading: 'lazy' }}
              {%- endif -%}
              {%- if mobile_link != blank -%}
                </a>
              {%- endif -%}
            </div>
          {%- elsif has_mobile and has_desktop == false -%}
            <div class="banner__media-desktop">
              {%- if block.settings.link_desktop != blank -%}
                <a href="{{ block.settings.link_desktop }}" class="banner__link">
              {%- endif -%}
              {%- if forloop.first -%}
                {{ block.settings.image_mobile | image_url: width: 3840 | image_tag: fetchpriority: fetch_priority }}
              {%- else -%}
                {{ block.settings.image_mobile | image_url: width: 3840 | image_tag: loading: 'lazy' }}
              {%- endif -%}
              {%- if block.settings.link_desktop != blank -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- unless block.settings.hide_content -%}
            <div class="banner__content banner__content--{{ section.settings.desktop_content_position }}">
              <div class="banner__box color-{{ section.settings.color_scheme }}">
                {%- if block.settings.heading != blank -%}
                  <h2 class="banner__heading {{ block.settings.heading_size }}">
                    {{ block.settings.heading }}
                  </h2>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="banner__text {{ block.settings.text_style }}">
                    <p>{{ block.settings.text }}</p>
                  </div>
                {%- endif -%}
                {%- if block.settings.button_label_1 != blank or block.settings.button_label_2 != blank -%}
                  <div class="banner__buttons">
                    {%- if block.settings.button_label_1 != blank -%}
                      <a
                        {% if block.settings.button_link_1 == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block.settings.button_link_1 }}"
                        {% endif %}
                        class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                      >
                        {{ block.settings.button_label_1 | escape }}
                      </a>
                    {%- endif -%}
                    {%- if block.settings.button_label_2 != blank -%}
                      <a
                        {% if block.settings.button_link_2 == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block.settings.button_link_2 }}"
                        {% endif %}
                        class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                      >
                        {{ block.settings.button_label_2 | escape }}
                      </a>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endunless -%}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <div class="slider-buttons">
      <button
        type="button"
        class="slider-button slider-button--prev slideshow__arrow slideshow__arrow--prev"
        name="previous"
        aria-label="Previous slide"
        aria-controls="Slider-{{ section.id }}"
      >
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button
        type="button"
        class="slider-button slider-button--next slideshow__arrow slideshow__arrow--next"
        name="next"
        aria-label="Next slide"
        aria-controls="Slider-{{ section.id }}"
      >
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  {%- endif -%}
</slideshow-component>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% schema %}
{
  "name": "Image Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "top-left",
          "label": "Top Left"
        },
        {
          "value": "top-center",
          "label": "Top Center"
        },
        {
          "value": "top-right",
          "label": "Top Right"
        },
        {
          "value": "middle-left",
          "label": "Middle Left"
        },
        {
          "value": "middle-center",
          "label": "Middle Center"
        },
        {
          "value": "middle-right",
          "label": "Middle Right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom Left"
        },
        {
          "value": "bottom-center",
          "label": "Bottom Center"
        },
        {
          "value": "bottom-right",
          "label": "Bottom Right"
        }
      ],
      "default": "middle-center",
      "label": "Content Position"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Image",
          "info": "Will be used for mobile too if mobile image not provided"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image",
          "info": "Optional - will use desktop image if not provided"
        },
        {
          "type": "url",
          "id": "link_desktop",
          "label": "Desktop Link",
          "info": "URL for desktop image click"
        },
        {
          "type": "url",
          "id": "link_mobile",
          "label": "Mobile Link",
          "info": "URL for mobile image click - uses desktop link if not provided"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Banner",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
